{
	"printWidth": 80,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"parser": "markdown"
			}
		},
		{
			"files": [".eslintrc", ".prettierrc", "*.json"],
			"options": {
				"parser": "json"
			}
		},
		{
			"files": ["*.yml", "*.neon.dist"],
			"options": {
				"parser": "yaml"
			}
		}
	]
}
