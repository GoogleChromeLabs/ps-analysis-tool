# See https://editorconfig.org for more about editor config.

# top-most EditorConfig file
root = true

# Match all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
