{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "outDir": "dist",
    "declarationDir": "dist-types",
    "composite": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "exclude": ["**/tests/**/*.ts", "dist/**", "dist-types/**"]
}
