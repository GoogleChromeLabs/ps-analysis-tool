{
  "compilerOptions": {
    "skipLibCheck": true,
    "rootDir": "src",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declarationDir": "dist-types",
    "composite": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/tests/**/*.ts", "dist/**", "dist-types/**"],
  "references": [
    { "path": "../common" },
    { "path": "../i18n" },
    { "path": "../analysis-utils" }
  ]
}
