{
  "extends": "../../tsconfig.shared.json",
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "target": "es6",
    "outDir": "dist",
    "jsx": "react-jsx",
    "declarationDir": "dist-types",
    "types": ["chrome"]
  },
  "include": [
    "src",
    "../../node_modules/@types/jest/index.d.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "**/tests/**/*.ts",
    "**/tests/**/*.tsx",
    "dist/**",
    "dist-types/**"
  ],
  "references": [
    { "path": "../common" },
    {
      "path": "../design-system"
    },
    { "path": "../i18n" }
  ]
}
