{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "declarationDir": "dist-types",
    "composite": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["**/tests/**/*.ts", "**/tests/**/*.tsx"],
  "references": [
    {
      "path": "../common"
    }
  ]
}
