{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "outDir": "dist",
    "declarationDir": "dist-types",
    "composite": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "**/tests/**/*.ts",
    "**/tests/**/*.tsx",
    "**/dist/**/*",
    "**/dist-types/**/*"
  ],
  "references": [
    {
      "path": "../common"
    }
  ]
}
